{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++ build active file",
        "command": "/usr/bin/x86_64-w64-mingw32-g++",
        "args": [   "-std=c++2a",  "-fconcepts", "-static", "${file}", "-lws2_32", "-lwininet", "-o", "${workspaceFolder}/out/${fileBasenameNoExtension}.exe"],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ]
  }
  